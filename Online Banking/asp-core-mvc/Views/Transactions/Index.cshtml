@model IEnumerable<asp_core_mvc.Models.Transactions>

@{
    ViewBag.Title = "Transactions";
}

<h1>@ViewBag.Title</h1> 

<p>Transactions</p> 

<table class="table table-condensed table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Desc</th>
            <th>Location</th>
            <th>Amount</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Transactions transaction in Model)
        {
        <tr>
            <td>@transaction.TransId</td>
            <td>@transaction.TransDate</td>
            <td>@transaction.TransDesc</td>
            <td>@transaction.Location</td>
            <td>@String.Format("{0}{1:0.00}", transaction.TransType, transaction.Amount)</td>
            <td>@String.Format("{0:0.00}", transaction.Balance)</td>
        </tr>
        }
    </tbody>
</table>

